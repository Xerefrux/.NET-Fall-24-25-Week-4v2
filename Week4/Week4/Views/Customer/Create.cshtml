
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form method="post">
    Name: <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span><br />
    Email: <input type="text" name="Email" value="@Model.Email" class="form-control" placeholder="Email" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span><br />
    Phone: <input type="text" name="Phone" value="@Model.Phone" class="form-control" placeholder="Phone" />
    <span class="text-danger">@Html.ValidationMessage("Phone")</span><br />
    Address: <input type="text" name="Address" value="@Model.Address" class="form-control" placeholder="Address" />
    <span class="text-danger">@Html.ValidationMessage("Address")</span><br />
    Date Joined: <input type="date" name="DateJoined" value="@Model.DateJoined" class="form-control" placeholder="Date Joined" />
    <span class="text-danger">@Html.ValidationMessage("DateJoined")</span><br />
    <input type="submit" value="Create" class="btn btn-success" />
</form>

