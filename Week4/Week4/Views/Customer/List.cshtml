
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}
@if (Model.Count == 0)
{
    <h3>No Data</h3>
}

else
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Date Joined</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>@item.DateJoined</td>
                <td>
                    <a href="/customer/details/@item.ID" class="btn btn-primary">Details</a>
                    <a href="/customer/edit/@item.ID" class="btn btn-info">Edit</a>
                    <a href="/customer/delete/@item.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}

<a class="btn btn-info" href="/customer/create">Create</a>
