
@{
    ViewBag.Title = "List";
}

<a class="btn btn-info" href="/product/create">Create</a>

<h2>List</h2>
@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}
@if (Model.Count == 0)
{
    <h3>No Data</h3>
}

else
{
    <table class ="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Category</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.StockQuantity</td>
                <td>@item.Category</td>
                <td>
                    <a href="/product/details/@item.ID" class="btn btn-primary">Details</a>
                    <a href="/product/edit/@item.ID" class="btn btn-info">Edit</a>
                    <a href="/product/delete/@item.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}

